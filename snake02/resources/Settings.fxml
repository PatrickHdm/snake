<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="hdm.org.se2.snake02.Settings">
	
	<BorderPane >
		<top>
			<Label >Settings</Label>
		</top>
		<center>
			<VBox>
				<Label>Screen-Resolution:</Label>
				<ComboBox fx:id="resolution">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<String fx:value="640x480" />
							<String fx:value="800x600" />
							<String fx:value="1024x768" />
							<String fx:value="1280x720" />
							<String fx:value="1920x1080"/>
						</FXCollections>
					</items>
				</ComboBox>
				
				<Label>Difficulty:</Label>
					<RadioButton fx:id="easybutton">Easy</RadioButton>
					<RadioButton fx:id="mediumbutton">Medium</RadioButton>
					<RadioButton fx:id="hardbutton">Hard</RadioButton>
				
				<Label>Theme:</Label>
					<RadioButton fx:id="theme1button">1</RadioButton>
				 	<RadioButton fx:id="theme2button">2</RadioButton>
				 	
				 <Label>Mode:</Label>
					<RadioButton fx:id="normalmodebutton">Normal</RadioButton>
					<RadioButton fx:id="randommodebutton">Random Numbers</RadioButton>
					<RadioButton fx:id="binarymodebutton">Learn Binary</RadioButton>
			</VBox>
		</center>
	</BorderPane>

</AnchorPane>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.sun.javafx.scene.control.skin.InputField?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="hdm.org.se2.snake02.GameOverController">
	
	<BorderPane fx:id="GridField">
		<top>
			<VBox>
				<Label>GAME OVER</Label>
				<HBox>
					<Label>Your score: </Label><Label fx:id="score">XXX</Label>
				</HBox>
			</VBox>
		</top>
		
		<center>
			<HBox>
				<Label>Name: </Label><TextField fx:id="name"></TextField>
			</HBox>
		</center>
		
		<bottom>
				<Button fx:id="saveHighscore" onAction="#saveHighscore">Save</Button>				
		</bottom>
		
	</BorderPane>
	
</AnchorPane>

